  transform: translate(100%,0%);
 }


#slide-3 {
	background: url("<%= asset_path 'background.jpg' %>") no-repeat center center;
	background-size: cover;
	-ms-transform: translate(200%, 0); /* IE 9 */
  -webkit-transform: translate(200%, 0); /* Chrome, Safari, Opera */
  transform: translate(200%, 0);
 }

